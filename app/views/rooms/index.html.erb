<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Roomname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% $rooms.each do |room| %>
      <tr>
        <td><%= room.roomname %></td>
        <td><%= link_to 'Join Room', room , method: :get %></td>
        <td> |  | </td>
        <td><%= link_to 'Delete Room', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
